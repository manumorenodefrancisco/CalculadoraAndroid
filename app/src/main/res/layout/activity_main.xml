<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/solution_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="64sp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/solution_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <GridLayout
        android:id="@+id/grid_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="#F1F1F1"
        android:columnCount="4"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Fila 1 -->
        <Button
            android:id="@+id/button_c"
            android:layout_width="80dp"
            android:layout_height="72dp"
            android:layout_margin="8dp"
            app:backgroundTint="#F44336"
            android:textSize="18dp"
            android:text="C"/>

        <Button
            android:id="@+id/button_ac"
            android:layout_width="80dp"
            android:layout_height="72dp"
            android:layout_margin="8dp"
            app:backgroundTint="#F44336"
            android:textSize="18dp"
            android:text="AC" />

        <Button
            android:id="@+id/button_porcentaje"
            android:layout_width="80dp"
            android:layout_height="72dp"
            android:layout_margin="8dp"
            app:backgroundTint="#FF9800"
            android:textSize="18dp"
            android:text="%" />

        <Button
            android:id="@+id/button_dividir"
            android:layout_width="80dp"
            android:layout_height="72dp"
            android:layout_margin="8dp"
            app:backgroundTint="#FF9800"
            android:textSize="18dp"
            android:text="/" />

        <!-- Fila 2 -->
        <Button
            android:id="@+id/button_7"
            android:layout_width="80dp"
            android:layout_height="72dp"
            android:layout_margin="8dp"
            app:backgroundTint="#A1A1A1"
            android:textSize="18dp"
            android:text="7" />

        <Button
            android:id="@+id/button_8"
            android:layout_width="80dp"
            android:layout_height="72dp"
            android:layout_margin="8dp"
            app:backgroundTint="#A1A1A1"
            android:textSize="18dp"
            android:text="8" />

        <Button
            android:id="@+id/button_9"
            android:layout_width="80dp"
            android:layout_height="72dp"
            android:layout_margin="8dp"
            app:backgroundTint="#A1A1A1"
            android:textSize="18dp"
            android:text="9" />

        <Button
            android:id="@+id/button_multiplicar"
            android:layout_width="80dp"
            android:layout_height="72dp"
            android:layout_margin="8dp"
            app:backgroundTint="#FF9800"
            android:textSize="18dp"
            android:text="*" />

        <!-- Fila 3 -->
        <Button
            android:id="@+id/button_4"
            android:layout_width="80dp"
            android:layout_height="72dp"
            android:layout_margin="8dp"
            app:backgroundTint="#A1A1A1"
            android:textSize="18dp"
            android:text="4" />

        <Button
            android:id="@+id/button_5"
            android:layout_width="80dp"
            android:layout_height="72dp"
            android:layout_margin="8dp"
            app:backgroundTint="#A1A1A1"
            android:textSize="18dp"
            android:text="5" />

        <Button
            android:id="@+id/button_6"
            android:layout_width="80dp"
            android:layout_height="72dp"
            android:layout_margin="8dp"
            app:backgroundTint="#A1A1A1"
            android:textSize="18dp"
            android:text="6" />

        <Button
            android:id="@+id/button_sumar"
            android:layout_width="80dp"
            android:layout_height="72dp"
            android:layout_margin="8dp"
            app:backgroundTint="#FF9800"
            android:textSize="18dp"
            android:text="+" />

        <!-- Fila 4 -->
        <Button
            android:id="@+id/button_1"
            android:layout_width="80dp"
            android:layout_height="72dp"
            android:layout_margin="8dp"
            app:backgroundTint="#A1A1A1"
            android:textSize="18dp"
            android:text="1" />

        <Button
            android:id="@+id/button_2"
            android:layout_width="80dp"
            android:layout_height="72dp"
            android:layout_margin="8dp"
            app:backgroundTint="#A1A1A1"
            android:textSize="18dp"
            android:text="2" />

        <Button
            android:id="@+id/button_3"
            android:layout_width="80dp"
            android:layout_height="72dp"
            android:layout_margin="8dp"
            app:backgroundTint="#A1A1A1"
            android:textSize="18dp"
            android:text="3" />

        <Button
            android:id="@+id/button_restar"
            android:layout_width="80dp"
            android:layout_height="72dp"
            android:layout_margin="8dp"
            app:backgroundTint="#FF9800"
            android:textSize="18dp"
            android:text="-" />

        <!-- Fila 5 -->
        <Button
            android:id="@+id/button_punto"
            android:layout_width="80dp"
            android:layout_height="72dp"
            android:layout_margin="8dp"
            app:backgroundTint="#FF9800"
            android:textSize="18dp"
            android:text="," />

        <Button
            android:id="@+id/button_0"
            android:layout_width="80dp"
            android:layout_height="72dp"
            android:layout_margin="8dp"
            app:backgroundTint="#A1A1A1"
            android:textSize="18dp"
            android:text="0" />

        <Button
            android:id="@+id/button_equals"
            android:layout_width="80dp"
            android:layout_height="72dp"
            android:layout_margin="8dp"
            app:backgroundTint="#FF9800"
            android:textSize="18dp"
            android:text="="
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"/>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
